<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.sogilis.idfx.controller.FXMLLoginController"
    prefHeight="400.0"
    prefWidth="600.0">

    <center>
        <GridPane
            alignment="CENTER"
            hgap="10"
            vgap="10"
        >
            <padding>
                <Insets top="25" right="25" bottom="10" left="25"/>
            </padding>
            <Text
                id="welcome-text"
                text="LOGIN"
                GridPane.columnIndex="0"
                GridPane.rowIndex="0"
                GridPane.columnSpan="2"
                style="-fx-font-weight: bold"
                GridPane.halignment="CENTER"
            >
                <GridPane.margin>
                    <Insets bottom="15"/>
                </GridPane.margin>
            </Text>
            <Label
                text="LABEL"
                GridPane.columnIndex="0"
                GridPane.rowIndex="1"
                minWidth="120"
            />
           <!-- <TextField
                fx:id="agentId"
                GridPane.columnIndex="1"
                GridPane.rowIndex="1"
            />-->
            <Label
                text="PASSWORD"
                GridPane.columnIndex="0"
                GridPane.rowIndex="2"
            />
           <!-- <PasswordField
                fx:id="agentPassword"
                GridPane.columnIndex="1"
                GridPane.rowIndex="2"
            />-->
            <HBox
                spacing="10"
                alignment="BOTTOM_RIGHT"
                GridPane.columnIndex="1"
                GridPane.rowIndex="4"
            >
                <Button
                    id="connection-button"
                    text="BUTTON"
                    onAction="#onConnectionPressed"
                    minWidth="120"
                />
            </HBox>
        </GridPane>
    </center>
</BorderPane>

